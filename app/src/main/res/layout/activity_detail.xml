<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_welcome"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_detail_vertical_margin"
    tools:context="sharetrain.gutsapps.com.activity.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/ticket_train" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                android:text="Detalle del billete"
                android:textColor="@color/black"
                android:textSize="30sp"
                tools:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <RelativeLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true">

                <TextView
                    android:id="@+id/tvExitDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/activity_detail_general_marging"
                    android:labelFor="@+id/etExitDetail"
                    android:text="Salida"
                    android:textColor="@color/white"
                    android:textSize="@dimen/activity_detail_main_font" />

                <EditText
                    android:id="@+id/etExitDetail"
                    android:layout_width="@dimen/activity_detail_width_inputs"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/gradientbg"
                    android:enabled="false"
                    android:inputType="text"
                    android:padding="@dimen/activity_detail_general_padding"
                    android:text="Madrid"
                    android:textAlignment="center"
                    android:textColor="@android:color/black" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvExitHourDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_detail_general_marging"
                    android:labelFor="@+id/etExitHourDetail"
                    android:text="Hora"
                    android:textColor="@color/white"
                    android:textSize="@dimen/activity_detail_main_font" />

                <EditText
                    android:id="@+id/etExitHourDetail"
                    android:layout_width="@dimen/activity_detail_width_inputs"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradientbg"
                    android:enabled="false"
                    android:inputType="text"
                    android:padding="@dimen/activity_detail_general_padding"
                    android:text="10:45"
                    android:textAlignment="center"
                    android:textColor="@android:color/black" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <RelativeLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true">

                <TextView
                    android:id="@+id/tvArrivalDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="false"
                    android:layout_centerInParent="false"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_detail_general_marging"
                    android:labelFor="@+id/etArrivalDetail"
                    android:text="Llegada"
                    android:textColor="@color/white"
                    android:textSize="@dimen/activity_detail_main_font" />

                <EditText
                    android:id="@+id/etArrivalDetail"
                    android:layout_width="@dimen/activity_detail_width_inputs"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/gradientbg"
                    android:enabled="false"
                    android:inputType="text"
                    android:padding="@dimen/activity_detail_general_padding"
                    android:text="Valencia"
                    android:textAlignment="center"
                    android:textColor="@android:color/black" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvArrivalHourDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_detail_general_marging"
                    android:labelFor="@+id/etArrivalHourDetail"
                    android:text="Hora"
                    android:textColor="@color/white"
                    android:textSize="@dimen/activity_detail_main_font" />

                <EditText
                    android:id="@+id/etArrivalHourDetail"
                    android:layout_width="@dimen/activity_detail_width_inputs"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradientbg"
                    android:enabled="false"
                    android:inputType="text"
                    android:padding="@dimen/activity_detail_general_padding"
                    android:text="13:45"
                    android:textAlignment="center"
                    android:textColor="@android:color/black" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <RelativeLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true">

                <TextView
                    android:id="@+id/tvTrainDetail"
                    android:layout_width="@dimen/activity_detail_width_inputs"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_detail_general_marging"
                    android:labelFor="@+id/etTrainDetail"
                    android:text="Tren"
                    android:textColor="@color/white"
                    android:textSize="@dimen/activity_detail_main_font" />

                <EditText
                    android:id="@+id/etTrainDetail"
                    android:layout_width="@dimen/activity_detail_width_inputs"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/gradientbg"
                    android:enabled="false"
                    android:inputType="text"
                    android:padding="@dimen/activity_detail_general_padding"
                    android:text="AVE"
                    android:textAlignment="center"
                    android:textColor="@android:color/black" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvClassDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_detail_general_marging"
                    android:labelFor="@+id/etClassDetail"
                    android:text="Clase"
                    android:textColor="@color/white"
                    android:textSize="@dimen/activity_detail_main_font" />

                <EditText
                    android:id="@+id/etClassDetail"
                    android:layout_width="@dimen/activity_detail_width_inputs"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradientbg"
                    android:enabled="false"
                    android:inputType="text"
                    android:padding="@dimen/activity_detail_general_padding"
                    android:text="Turista"
                    android:textAlignment="center"
                    android:textColor="@android:color/black" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <RelativeLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true">

                <TextView
                    android:id="@+id/tvSellerDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_detail_general_marging"
                    android:labelFor="@+id/etSellerDetail"
                    android:text="Vende"
                    android:textColor="@color/white"
                    android:textSize="@dimen/activity_detail_main_font" />

                <EditText
                    android:id="@+id/etSellerDetail"
                    android:layout_width="@dimen/activity_detail_width_inputs"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/gradientbg"
                    android:enabled="false"
                    android:inputType="text"
                    android:padding="@dimen/activity_detail_general_padding"
                    android:text="Pepe"
                    android:textAlignment="center"
                    android:textColor="@android:color/black" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvRatingDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_detail_general_marging"
                    android:labelFor="@+id/etRatingDetail"
                    android:text="Votos"
                    android:textColor="@color/white"
                    android:textSize="@dimen/activity_detail_main_font" />

                <EditText
                    android:id="@+id/etRatingDetail"
                    android:layout_width="@dimen/activity_detail_width_inputs"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradientbg"
                    android:enabled="false"
                    android:inputType="numberPassword"
                    android:padding="@dimen/activity_detail_general_padding"
                    android:text="1234"
                    android:textAlignment="center"
                    android:textColor="@android:color/black" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPriceDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="50dp"
                android:text="Precio"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_detail_price_font" />

            <EditText
                android:id="@+id/etPriceDetail"
                android:layout_width="@dimen/activity_detail_width_inputs"
                android:layout_height="wrap_content"
                android:background="@drawable/gradientbg"
                android:enabled="false"
                android:inputType="text"
                android:padding="@dimen/activity_detail_general_padding"
                android:text="35â‚¬"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/activity_detail_price_font" />
        </LinearLayout>

        <info.hoang8f.widget.FButton
            android:id="@+id/btSearch"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="@string/detail_interested"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            fbutton:buttonColor="@color/black_overlay"
            fbutton:cornerRadius="5dp"
            fbutton:shadowColor="@color/black_overlay"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp" />
    </LinearLayout>

</RelativeLayout>
