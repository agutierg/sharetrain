<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_welcome"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_detail_vertical_margin"
    tools:context="sharetrain.gutsapps.com.fragment.OfferTicketFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_offer_ticket_marging_bottom">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/tvExitOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/activity_detail_general_marging"
                android:labelFor="@+id/etExitDetail"
                android:text="@string/exit"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_detail_main_font" />

            <AutoCompleteTextView
                android:id="@+id/autocompleteExitOffer"
                android:layout_width="@dimen/activity_offer_ticket_inputs"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/gradientbg"
                android:hint="@string/welcome_from"
                android:padding="@dimen/activity_detail_general_padding"
                android:textColor="@android:color/black"
                android:textSize="@dimen/activity_detail_main_font" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_offer_ticket_marging_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvExitDateOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_detail_general_marging"
                android:text="@string/dateDay"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_detail_main_font" />

            <ImageView
                android:id="@+id/ivExitDateOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                fbutton:srcCompat="@drawable/ic_data_picker_red" />

            <TextView
                android:id="@+id/tvExitHourOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_detail_general_marging"
                android:text="@string/dateHour"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_detail_main_font" />

            <ImageView
                android:id="@+id/ivExitHourOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                fbutton:srcCompat="@drawable/ic_time_red" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_offer_ticket_marging_bottom">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/tvArrivalOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_detail_general_marging"
                android:labelFor="@+id/etArrivalOffer"
                android:text="Llegada"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_detail_main_font" />

            <AutoCompleteTextView
                android:id="@+id/autocompleteArrivalOffer"
                android:layout_width="@dimen/activity_offer_ticket_inputs"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/gradientbg"
                android:hint="@string/welcome_from"
                android:padding="@dimen/activity_detail_general_padding"
                android:textColor="@android:color/black"
                android:textSize="@dimen/activity_detail_main_font" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_offer_ticket_marging_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvArrivalDateOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_detail_general_marging"
                android:text="@string/dateDay"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_detail_main_font" />

            <ImageView
                android:id="@+id/ivArrivalDateOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                fbutton:srcCompat="@drawable/ic_data_picker_red" />

            <TextView
                android:id="@+id/tvArrivalHourOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_detail_general_marging"
                android:text="@string/dateHour"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_detail_main_font" />

            <ImageView
                android:id="@+id/ivArrivalHourOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                fbutton:srcCompat="@drawable/ic_time_red" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_offer_ticket_marging_bottom">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/tvTrainOffer"
                android:layout_width="@dimen/activity_detail_width_inputs"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_detail_general_marging"
                android:labelFor="@+id/etTrainOffer"
                android:text="@string/train"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_detail_main_font" />

            <Spinner
                android:id="@+id/spiTrainOffer"
                android:layout_width="@dimen/activity_offer_ticket_inputs"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_offer_ticket_marging_bottom">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/tvClassOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_detail_general_marging"
                android:labelFor="@+id/etClassOffer"
                android:text="@string/clase"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_detail_main_font" />

            <Spinner
                android:id="@+id/spiClassOffer"
                android:layout_width="@dimen/activity_offer_ticket_inputs"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_offer_ticket_marging_bottom">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/tvPriceOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="50dp"
                android:text="@string/price"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_detail_price_font" />

            <EditText
                android:id="@+id/etPriceOffer"
                android:layout_width="@dimen/activity_offer_ticket_inputs"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/gradientbg"
                android:inputType="numberDecimal"
                android:maxLength="4"
                android:padding="@dimen/activity_detail_general_padding"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/activity_detail_price_font" />
        </RelativeLayout>
    </RelativeLayout>

    <info.hoang8f.widget.FButton
        android:id="@+id/btAddOffer"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="@string/addOffer"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        fbutton:buttonColor="@color/black_overlay"
        fbutton:cornerRadius="5dp"
        fbutton:shadowColor="@color/black_overlay"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp" />
</LinearLayout>